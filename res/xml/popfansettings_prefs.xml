<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/popfan_settings_title">

    <PreferenceCategory
        android:key="statbar"
        android:title="@string/cat_status_bar">

        <CheckBoxPreference
            android:key="pref_center_clock_status_bar"
            android:title="@string/pref_center_clock_status_bar_title"
            android:summary="@string/pref_center_clock_status_bar_summary"
            android:defaultValue="false" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="pref_clock_color"
            android:title="@string/pref_clock_color_title"
            android:defaultValue="@android:color/holo_blue_light" />

        <Preference
            android:key="pref_clock_color_reset"
            android:title="@string/pref_clock_color_reset_title" />

        <CheckBoxPreference
            android:key="pref_disable_alarm"
            android:title="@string/pref_disable_alarm_title"
            android:summary="@string/pref_disable_alarm_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="hardkeys"
        android:title="@string/cat_hard_keys">

        <CheckBoxPreference
            android:key="pref_back_button_ends_call"
            android:title="@string/pref_back_button_ends_call_title"
            android:summary="@string/pref_back_button_ends_call_summary"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:key="pref_menu_button_answers_call"
            android:title="@string/pref_menu_button_answers_call_title"
            android:summary="@string/pref_menu_button_answers_call_summary"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="pref_volume_adjust_sounds"
            android:title="@string/pref_volume_adjust_sounds_enable_title"
            android:summary="@string/pref_volume_adjust_sounds_enable_summary"
            android:persistent="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="power_dialog"
        android:title="@string/cat_power_dialog">

        <CheckBoxPreference
            android:key="pref_disable_title"
            android:title="@string/pref_disable_title_title" />

        <CheckBoxPreference
            android:key="pref_disable_reboot"
            android:title="@string/pref_disable_reboot_title" />

        <CheckBoxPreference
            android:key="pref_disable_profile"
            android:title="@string/pref_disable_profile_title" />

        <CheckBoxPreference
            android:key="pref_disable_screenshot"
            android:title="@string/pref_disable_screenshot_title" />

        <CheckBoxPreference
            android:key="pref_disable_airplane"
            android:title="@string/pref_disable_airplane_title" />

        <CheckBoxPreference
            android:key="pref_disable_ringer"
            android:title="@string/pref_disable_ringer_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="system"
        android:title="@string/cat_system">

        <CheckBoxPreference
            android:key="pref_disable_bootanimation"
            android:title="@string/pref_disable_bootanimation_title"
            android:summary="@string/pref_disable_bootanimation_summary"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="pref_ultra_brightness"
            android:title="@string/pref_ultra_brightness_title"
            android:summary="@string/pref_ultra_brightness_summary"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="pref_adb_notify"
            android:title="@string/pref_adb_notify_title"
            android:summary="@string/pref_adb_notify_summary"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="lockscreen"
        android:title="@string/cat_lockscreen">

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="pref_lockscreen_text_color"
            android:title="@string/pref_lockscreen_text_color_title"
            android:defaultValue="#ffffffff" />

        <Preference
            android:key="pref_custom_carrier_label"
            android:title="@string/pref_lockscreen_text_title" />

        <Preference
            android:key="pref_custom_carrier_label_reset"
            android:title="@string/pref_custom_carrier_label_reset_title" />

        <CheckBoxPreference
            android:key="pref_lockscreen_battery"
            android:title="@string/pref_lockscreen_battery_title"
            android:summary="@string/pref_lockscreen_battery_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

</PreferenceScreen>
